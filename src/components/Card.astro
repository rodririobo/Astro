---
interface Props {

	caption: string;
	alt: string;
	scr: string;
	height: string;
	width: string;
	href?:string;
	
}

const {alt, scr, height, width, caption, href} = Astro.props;
---

	<li class="link-card">
 
			<figure>
				<a href={href}><img src={scr} alt={alt} height={height} width={width}></a>
				<h2>Prueba</h2>
				<figcaption>{caption}</figcaption>
		    </figure>
	
	</li>

<style>/* aplica estilos al componente */
	.link-card {
		list-style: none;
		display: flex;
		flex-wrap: wrap;
        align-items: center;
		padding: 1px;
		background-color: #23262d;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > figure {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
		text-align: justify;
	}

	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}

	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
	figure a {
		text-decoration: none;
		color:white;
	}
	figure {
		
		padding: 0;
        margin: 0;
		display: flex;
    	flex-wrap: wrap;
    	flex-direction: column;
    	justify-content: center;
    	align-items: center;
    	align-content: center;
	
	}

	figure a {
	text-decoration: none;
	color:white;
	}


</style>